<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_event_description_full" inherit_id="website_event.registration_template"
              name="Custom Event Description" priority="10">
        <xpath expr="//div[@id='o_wevent_tickets_collapse']" position="replace">
            <div id="o_wevent_tickets_collapse" class="collapse show" style="overflow: hidden;">
                <center>
                    <div class="custom-section px-3 py-3 bg-light border-bottom">
                        <div t-att-data-venue="event.venue_id.id" class="col-md-8 col-xs-12 p-1" id="stadium-map"/>
                        <div t-att-data-event="event.id" class="col-md-8 col-xs-12 p-1 d-none" id="event_id"/>
                        <div t-att-data-maxlimitevent="event.max_reserve_ticket" class=" d-none" id="event_max_limit"/>
                    </div>
                    <br/>
                    <div class="ticket_detail">
                        <t t-set="tickets" t-value="sorted(tickets, key=lambda k: k.price, reverse=True)"/>
                        <div id="ticket-list">

                            <div class="row mb-2" style="text-align: justify;">
                                <t t-foreach="no_group_tickets" t-as="ticket" t-key="ticket">
                                    <div class="col-4 mb-3">
                                        <h5 itemprop="name" t-esc="ticket.name" class="my-0"/>
                                    </div>
                                    <div class="col-4">
                                        <span><t t-esc="ticket.price"/>&amp;nbsp;SR
                                        </span>
                                    </div>
                                    <div class="col-4">
                                        <div class="w-auto d-flex"
                                             style="justify-content: center;align-items: center;gap: 7px;">
                                            <i class="fa fa-minus"/>
                                            <select
                                                    t-attf-name="nb_register-#{ticket.id}"
                                                    class="custom-select  d-none">
                                                <t t-set="seats_max_ticket"
                                                   t-value="(not ticket.seats_limited or ticket.seats_available &gt; 100000) and 100000 or ticket.seats_available + 1"/>
                                                <t t-set="seats_max_event"
                                                   t-value="(not event.seats_limited or event.seats_available &gt; 100000) and 100000 or event.seats_available + 1"/>
                                                <t t-set="seats_max"
                                                   t-value="min(seats_max_ticket, seats_max_event)"/>
                                                <t t-foreach="range(0, seats_max)" t-as="nb">
                                                    <option t-esc="nb"
                                                            t-att-selected="len(ticket) == 0 and nb == 0 and 'selected'"/>
                                                </t>
                                            </select>
                                            <t t-if="not ticket.is_expired and ticket.sale_available">
                                                <input type="number"
                                                       t-attf-name="nb_register-#{ticket.id}"
                                                       value="0"
                                                       t-att-data-max="ticket.max_reserve_ticket"
                                                       t-att-data-available="ticket.seats_available"
                                                       t-att-data-id="ticket.id"
                                                       class="ticket-num"
                                                       style="background: #fff;width: 60px;border-radius: 5px;border: none;text-align: center;padding-left: 15px;"/>
                                            </t>
                                            <div t-else="" class="text-danger">
                                                <span t-if="not ticket.sale_available and not ticket.is_expired and ticket.is_launched()">
                                                    Sold Out
                                                </span>
                                                <span t-if="ticket.is_expired">Expired</span>
                                            </div>
                                            <i class="fa fa-plus"/>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <span class="alert-danger error d-none mt-1"
                                              t-att-id="'error-' + str(ticket.id)" role="alert"/>
                                    </div>

                                    <div class="o_wevent_registration_multi_select d-none"/>
                                </t>
                            </div>

                            <t t-foreach="tickets_grouped" t-as="group" t-key="group">
                                <div class="row" style="display: flex;">
                                    <div class="col-6" style="text-align:left;">
                                        <h5 itemprop="name" t-esc="group" class="mb-3"/>
                                    </div>
                                    <div class="col-6" style="text-align:end;">
                                        <a href="#" class="mb-3 fa fa-angle-down toggle-group-collapse"
                                           t-att-data-group="group">&amp;nbsp;Show
                                        </a>
                                    </div>
                                </div>
                                <!-- Dynamically assign the ID to each group -->
                                <div class="ticket-group" t-att-id="'group-' + group.replace(' ', '_')"
                                     style="display: none;">
                                    <t t-foreach="tickets_grouped[group]" t-as="subgroup" t-key="subgroup">
                                        <div class="row">
                                            <div class="col-12">
                                                <h6 t-esc="subgroup" class="text-muted mb-2 d-none"/>
                                            </div>
                                            <t t-foreach="tickets_grouped[group][subgroup]" t-as="ticket">
                                                <div class="col-4 mb-3">
                                                    <h5 itemprop="name" t-esc="ticket.name" class="my-0"/>
                                                </div>
                                                <div class="col-4">
                                                    <span><t t-esc="ticket.price"/>&amp;nbsp;SR
                                                    </span>
                                                </div>

                                                <div class="col-4">
                                                    <div class="w-auto d-flex"
                                                         style="justify-content: center;align-items: center;gap: 7px;">
                                                        <i class="fa fa-minus"/>
                                                        <select
                                                                t-attf-name="nb_register-#{ticket.id}"
                                                                class="custom-select  d-none">
                                                            <t t-set="seats_max_ticket"
                                                               t-value="(not ticket.seats_limited or ticket.seats_available &gt; 100000) and 100000 or ticket.seats_available + 1"/>
                                                            <t t-set="seats_max_event"
                                                               t-value="(not event.seats_limited or event.seats_available &gt; 100000) and 100000 or event.seats_available + 1"/>
                                                            <t t-set="seats_max"
                                                               t-value="min(seats_max_ticket, seats_max_event)"/>
                                                            <t t-foreach="range(0, seats_max)" t-as="nb">
                                                                <option t-esc="nb"
                                                                        t-att-selected="len(ticket) == 0 and nb == 0 and 'selected'"/>
                                                            </t>
                                                        </select>
                                                        <t t-if="not ticket.is_expired and ticket.sale_available">
                                                            <input type="number"
                                                                   t-attf-name="nb_register-#{ticket.id}"
                                                                   value="0"
                                                                   t-att-data-max="ticket.max_reserve_ticket"
                                                                   t-att-data-available="ticket.seats_available"
                                                                   t-att-data-id="ticket.id"
                                                                   class="ticket-num"
                                                                   style="background: #fff;width: 60px;border-radius: 5px;border: none;text-align: center;padding-left: 15px;"/>
                                                        </t>
                                                        <div t-else="" class="text-danger">
                                                            <span t-if="not ticket.sale_available and not ticket.is_expired and ticket.is_launched()">
                                                                Sold Out
                                                            </span>
                                                            <span t-if="ticket.is_expired">Expired</span>
                                                        </div>
                                                        <i class="fa fa-plus"/>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <span class="alert-danger error d-none mt-1"
                                                          t-att-id="'error-' + str(ticket.id)" role="alert"/>
                                                </div>

                                                <div class="o_wevent_registration_multi_select d-none"/>
                                            </t>

                                            <div>
                                            </div>
                                        </div>
                                    </t>

                                </div>
                            </t>
                            <div class="bg-light ticket border-bottom">
                                <div class="d-grid mt-1">
                                    <span class="alert-danger p-2 error-total d-none"/>
                                </div>
                            </div>
                            <div>
                                <t t-if="request.env.user._is_public()">
                                    <a t-attf-href="/web/phone/login?redirect=/event/#{ slug(event) }/register"
                                       class="btn btn-primary">Sign Up First
                                    </a>
                                </t>
                                <t t-else="">
                                    <button type="submit"
                                            style="width:95%;background: #002BD1;border-radius:10px;padding:10px;"
                                            class="btn btn-primary register-btn o_wait_lazy_js btn-block a-submit"
                                            t-attf-id="#{event.id}">
                                        Buy Now
                                        <t t-if="event.seats_limited and event.seats_max and event.seats_available &lt;= (event.seats_max * 0.2)">
                                            (only
                                            <t t-esc="event.seats_available"/>
                                            available)
                                        </t>
                                    </button>
                                </t>
                            </div>

                        </div>
                    </div>
                </center>
            </div>
        </xpath>
    </template>

    <template id="event_details" name="Event Header">
        <t t-call="website_event.layout">
            <div name="event" itemscope="itemscope" itemtype="http://schema.org/Event">
                <t t-call="website.record_cover">
                    <t t-set="_record" t-value="event"/>
                    <t t-set="use_filters" t-value="True"/>
                    <t t-set="use_size" t-value="True"/>
                    <t t-set="use_text_align" t-value="True"/>

                    <div class="container d-flex flex-column flex-grow-1 justify-content-around">
                        <div class="o_wevent_event_title">
                            <span t-if="event.is_participating" class="badge badge-success o_wevent_badge"><i
                                    class="fa fa-check mr-2"/>Registered
                            </span>
                            <h1 t-field="event.name" class="o_wevent_event_name" itemprop="name"
                                placeholder="Event Title"/>
                            <h2 t-field="event.subtitle" class="o_wevent_event_subtitle" placeholder="Event Subtitle"/>
                        </div>
                    </div>
                </t>
                <t t-out="0"/>
            </div>
        </t>
    </template>

    <template id="event_layout_mobile" inherit_id="website_event.layout" name="Event Mobile">
        <xpath expr="//t[@t-if='not event.menu_id']/nav" position="attributes">
            <attribute name="t-if">not is_mobile</attribute>
        </xpath>
        <xpath expr="//t[@t-else='']/nav" position="attributes">
            <attribute name="t-if">not is_mobile</attribute>
        </xpath>
    </template>

